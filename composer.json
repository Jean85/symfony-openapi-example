{
    "name": "jean85/symfony-openapi-example",
    "description": "An example of using an OpenAPI spec in a Symfony application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alessandro Lai",
            "email": "alessandro.lai85@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "league/openapi-psr7-validator": "^0.15.2",
        "nyholm/psr7": "^1.4",
        "symfony/dotenv": "^5.2",
        "symfony/flex": "^1.12",
        "symfony/framework-bundle": "^5.2",
        "symfony/psr-http-message-bridge": "^2.1",
        "symfony/yaml": "^5.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.81",
        "vimeo/psalm": "^4.6",
        "phpunit/phpunit": "^9.5",
        "facile-it/facile-coding-standard": "^0.4.1",
        "facile-it/symfony-functional-testcase": "^1.1",
        "symfony/browser-kit": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src" 
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --diff",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
